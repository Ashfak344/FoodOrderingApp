<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderDetailsActivity">

    <!-- Order Information Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/orderDetailsCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Order ID -->
            <TextView
                android:id="@+id/orderIdText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order ID: 12345"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingBottom="8dp"/>

            <!-- User Information -->
            <TextView
                android:id="@+id/nameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name: John Doe"
                android:textSize="14sp"
                android:paddingBottom="4dp"/>

            <TextView
                android:id="@+id/mobileText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobile: 123-456-7890"
                android:textSize="14sp"
                android:paddingBottom="4dp"/>

            <TextView
                android:id="@+id/addressText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address: 123 Street, City, Country"
                android:textSize="14sp"
                android:paddingBottom="8dp"/>

            <!-- Order Status -->
            <TextView
                android:id="@+id/statusText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status: Accepted"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_green_dark"
                android:paddingBottom="8dp"/>

            <!-- Timestamp -->
            <TextView
                android:id="@+id/timestampText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Timestamp: 2025-04-06 10:30"
                android:textSize="14sp"
                android:paddingBottom="8dp"/>

            <!-- Action Buttons -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">

                <Button
                    android:id="@+id/acceptButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accept"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/rejectButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reject"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Order Items Section -->
    <TextView
        android:id="@+id/orderItemsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Items"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/orderDetailsCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="8dp"/>

    <!-- List of Items -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/orderItemsRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/orderItemsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
