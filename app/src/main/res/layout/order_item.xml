<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/order_item_admin.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/blue"
    android:layout_marginBottom="5dp">

    <!-- Left Section: Order Details -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/orderIdText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order ID: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/userNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: " />

        <TextView
            android:id="@+id/userAddressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address: " />



        <TextView
            android:id="@+id/userMobileText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile: " />



        <TextView
            android:id="@+id/orderTimestampText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Timestamp: " />

        <TextView
            android:id="@+id/orderStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: " />

        <TextView
            android:id="@+id/orderItemsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Items: " />
    </LinearLayout>

    <!-- Right Section: Buttons (Vertical) -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="16dp">

        <!-- Accept Button: Prominent -->
        <Button
            android:id="@+id/acceptButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accept"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/green"
            android:padding="12dp"
            android:elevation="6dp"
            android:layout_marginBottom="8dp" />

        <!-- Reject Button: Less Prominent -->
        <Button
            android:id="@+id/rejectButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reject"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/red"
            android:padding="12dp"
            android:elevation="2dp" />
    </LinearLayout>

</LinearLayout>

